{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "SOP Output Schema",
  "type": "object",
  "properties": {
    "type": {
      "type": "string",
      "enum": ["FeatureCollection"],
      "description": "GeoJSON FeatureCollection type"
    },
    "features": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "enum": ["Feature"]
          },
          "geometry": {
            "type": "object",
            "properties": {
              "type": {
                "type": "string",
                "enum": ["Point", "Polygon", "LineString"]
              },
              "coordinates": {
                "type": "array",
                "description": "Geometry coordinates"
              }
            },
            "required": ["type", "coordinates"]
          },
          "properties": {
            "type": "object",
            "properties": {
              "class": {
                "type": "string",
                "description": "Detection class name"
              },
              "confidence": {
                "type": "number",
                "minimum": 0,
                "maximum": 1,
                "description": "Detection confidence score"
              },
              "id": {
                "type": "string",
                "description": "Unique detection identifier"
              },
              "description": {
                "type": "string",
                "description": "Human-readable description"
              }
            },
            "required": ["class", "confidence", "id"]
          }
        },
        "required": ["type", "geometry", "properties"]
      }
    }
  },
  "required": ["type", "features"],
  "additionalProperties": false
}
